# Environment Configuration for Telescope Control Application

# ===== Server Configuration =====
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# ===== UI Configuration =====
UI_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===== Telescope Configuration =====
# Default Seestar telescope settings
SEESTAR_HOST=
SEESTAR_PORT=4700

# ===== Redis Configuration =====
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ===== Development Settings =====
NODE_ENV=development
PYTHON_ENV=development

# ===== Logging =====
LOG_LEVEL=INFO

# ===== Optional Features =====
# Enable auto-discovery of telescopes
ENABLE_DISCOVERY=true

# Enable remote controller access
ENABLE_REMOTE_CONTROLLER=false